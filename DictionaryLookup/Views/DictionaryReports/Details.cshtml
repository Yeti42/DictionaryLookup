@model DictionaryLookup.Models.ErrorReportViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>DictionaryReport</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Word
        </dt>

        <dd>
            @Html.DisplayFor(model => model.wordString)
        </dd>

        <dt>
            Language
        </dt>

        <dd>
            @Html.DisplayFor(model => model.languageName)
        </dd>

        <dt>
            Date/Time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dr.ReportDateTime)
        </dd>

        <dt>
            Error Reported
        </dt>

        <dd>
            @Html.DisplayFor(model => model.errorName)
        </dd>

        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userName)
        </dd>

        <dt>
            Comments
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dr.Notes)
        </dd>

    </dl>
</div>